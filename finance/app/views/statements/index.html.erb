<h1>Listing statements</h1>

<table>
  <tr>
    <th>Cuenta</th>
    <th>Fecha de cierre</th>
    <th>Fecha de vencimiento</th>
    <th>Monto</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @statements.select { |stmt| not stmt.account.nil? }.each do |statement| %>
  <tr>
    <td><%= link_to statement.account.name, statement.account %></td>
    <td><%= statement.closing_date %></td>
    <td><%= statement.due_date %></td>
    <td>$ <%= statement.ammount %></td>
    <td><%= link_to 'Show', statement %></td>
    <td><%= link_to 'Edit', edit_statement_path(statement) %></td>
    <td><%= link_to 'Destroy', statement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

